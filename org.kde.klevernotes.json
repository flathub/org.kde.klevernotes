{
    "id": "org.kde.klevernotes",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.9",
    "command": "klevernotes",
    "finish-args": [
        "--device=dri",
        "--env=QML_IMPORT_PATH=/app/qml",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "cleanup-commands": "/app/cleanup-BaseApp.sh",
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.9.0.tar.xz",
                    "sha256": "21314a91f26b1c962def3fd7ff2e762d3358b075f63f4d7e0144fb2c63b7ebc7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "klevernotes",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/klevernotes/1.2.3/klevernotes-1.2.3.tar.xz",
                    "sha256": "7960a366b39f8eabbab82f560eac28620f55cacb3c3c6c445cacd1f8c804836e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 374699,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/klevernotes/$version/klevernotes-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
