{
    "id": "org.kde.klevernotes",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.9",
    "command": "klevernotes",
    "finish-args": [
        "--device=dri",
        "--env=QML_IMPORT_PATH=/app/qml",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.11.0.tar.xz",
                    "sha256": "6dcdfa324f710f00887e6321212fc8582a3c4712450d129d91435bb1edd8d523",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "klevernotes",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/klevernotes/1.2.5/klevernotes-1.2.5.tar.xz",
                    "sha256": "e3b89601c5b520c0b9d2dcb4745f74d2b66fb30860a1cefcbaf52541ab5ed64a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 374699,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/klevernotes/$version/klevernotes-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
