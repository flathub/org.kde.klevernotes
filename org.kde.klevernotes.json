{
    "id": "org.kde.klevernotes",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.7",
    "command": "klevernotes",
    "finish-args": [
        "--device=dri",
        "--env=QML_IMPORT_PATH=/app/qml",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "cleanup-commands": "/app/cleanup-BaseApp.sh",
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.5.0.tar.xz",
                    "sha256": "f9dfd191022b633ea3348f84730d7158a159dfe49668dba0a9e9bd678ac44e54",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "klevernotes",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/klevernotes/1.0.0/klevernotes-1.0.0.tar.xz",
                    "sha256": "f675ce69adbf0f224ede75c66e7bcf6988d716b568020c79dad87aee5e6078e5",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 374699,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/klevernotes/$version/klevernotes-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
