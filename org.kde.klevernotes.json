{
    "id": "org.kde.klevernotes",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.9",
    "command": "klevernotes",
    "finish-args": [
        "--device=dri",
        "--env=QML_IMPORT_PATH=/app/qml",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.10.0.tar.xz",
                    "sha256": "c98f92bf7c452e12f6dc403404215413db3959fe904ad830ead0db6bb09b3d11",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "klevernotes",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/klevernotes/1.2.4/klevernotes-1.2.4.tar.xz",
                    "sha256": "6ed9c29fd621034688860e8f5d8bb1b1941ae89787c88ad8c122af4eeaabb23f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 374699,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/klevernotes/$version/klevernotes-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
